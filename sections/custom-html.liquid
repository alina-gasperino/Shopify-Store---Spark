{{ section.settings.custom_html }}
{% style %}
  #shopify-section-{{section.id}} {
    background: {{section.settings.bg_color}};
    text-align: center;
  }
{% endstyle %}
{% schema %}
{
  "name": "Custom HTML",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "html",
      "id": "custom_html",
      "label": "Code"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default" : "#000000"
    }
  ],
  "presets": [
    {
      "name": "Custom HTML"
    }
  ]
}
{% endschema %}